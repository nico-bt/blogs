<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>
<body>
    
    <%- include("./partials/nav.ejs") %>
        
    <% data.map(item => { %>
        <a href="/blogs/<%= item._id %>" class="item-link">
        <div class="item">
                <h2><%= item.title %></h2>
                <p><%= item.shortDescription %></p>
                
                <div class="item-btn-container">

                    <a class="edit-item-btn" href="/blogs/<%=item._id%>/edit">
                        <img src="/edit.svg" alt="edit icon" width="22px">
                    </a>

                    <form class="delete-item-btn" action="/blogs/<%=item._id%>?_method=DELETE" method="POST">
                        <button>
                            <img src="/delete.svg" alt="delete icon" width="22px">
                        </button>
                    </form>

                </div>

            </div>
        </a>
    
    <% }) %>

    <%- include("./partials/footer.ejs") %>

    
</body>
</html>