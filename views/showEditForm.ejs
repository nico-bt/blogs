<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>

<body>

  <%- include("./partials/nav.ejs") %>

  <div class="add-blog">
      <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required value="<%= blog.title %>">
        
        <label for="shortDescription">Short description:</label>
        <input type="text" id="shortDescription" name="shortDescription" required value="<%= blog.shortDescription %>">
        
        <label for="content">Content: </label>
        <textarea name="content" id="content" rows="14"><%= blog.content %></textarea>

        <button>Edit</button>
      </form>
    </div>

    <%- include("./partials/footer.ejs") %>
</body>
</html>